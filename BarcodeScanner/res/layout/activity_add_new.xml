<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/edit_product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="34dp"
        android:text="@string/new_product_title"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/edit_product_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/edit_product_title"
        android:layout_below="@id/edit_product_title"
        android:layout_marginTop="15dp"
        android:text="@string/new_product_id_title"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/new_product_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/edit_product_id_title"
        android:layout_alignParentRight="true"
        android:text="@string/new_product_id"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/new_product_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/edit_product_id_title"
        android:layout_below="@id/edit_product_id_title"
        android:layout_marginTop="15dp"
        android:text="@string/new_product_name_title"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/new_product_name_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/new_product_name_title"
        android:layout_below="@id/new_product_name_title"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/new_product_name_hint" >

        <requestFocus />
    </EditText>
    
    <TextView
        android:id="@+id/new_product_title_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/new_product_title_price"
        android:layout_below="@id/new_product_name_field"
        android:layout_marginTop="15dp"
        android:textSize="25sp"
        android:textStyle="bold|italic" />
    
    <EditText
       	android:id="@+id/new_product_price"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/new_product_title_price"
        android:layout_below="@id/new_product_title_price"
        android:inputType="number"
        android:ems="10"
        android:hint="@string/new_product_price_hint" />
    
    <Button
        android:id="@+id/new_product_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="addProduct"
        android:text="@string/new_product_add_button" />

</RelativeLayout>